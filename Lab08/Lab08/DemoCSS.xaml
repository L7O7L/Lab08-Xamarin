<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lab08.DemoCSS">
    <ContentPage.Resources>

        <StyleSheet Source="resources/style.css"></StyleSheet>
        
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Padding="50">

            <StackLayout HorizontalOptions="Center">
                <Label Text="Login"></Label>
            </StackLayout>
            <StackLayout Orientation="Vertical">
                <Entry Placeholder="Email Address"></Entry>
                <Entry Placeholder="Password"></Entry>
            </StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Button Text="Login"></Button>
                <Button Text="Register"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>